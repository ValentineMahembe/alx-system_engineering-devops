#!/usr/bin/env bash
# This script configures DNS resolution for localhost and facebook.com

# Exit if any command fails
set -e

# Backup the hosts file
cp /etc/hosts /etc/hosts.bak

# Use sed to set localhost to resolve to 127.0.0.2
sed -i 's/^127\.0\.0\.1\s*localhost/127.0.0.2 localhost/' /etc/hosts

# Add facebook.com resolution to 8.8.8.8
echo '8.8.8.8 facebook.com' >> /etc/hosts
